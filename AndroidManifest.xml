<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.itwizard.mezzofanti" android:versionName="1.0.3" android:versionCode="4">
    <uses-sdk android:minSdkVersion="3"/>
    <application android:label="@string/mezzofanti_appName"
    			 android:icon="@drawable/wizard_48">
        <activity android:name=".Mezzofanti"
                  android:screenOrientation="landscape"
              	  android:configChanges="orientation|keyboardHidden"
              	  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="PreferencesActivity"
              android:label="@string/preferences_name">
    	</activity>
        <activity android:name="InstallActivity"
              android:label="@string/installactivity_name">
    	</activity>
        <activity android:name="ResultsActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:label="@string/resultsactivity_name">
        </activity>
        <activity android:name="TranslateActivity"
              android:label="@string/translateactivity_name"                  
              android:screenOrientation="landscape"
              android:configChanges="orientation|keyboardHidden"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
    	</activity>
    </application>
    <uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
</manifest> 
